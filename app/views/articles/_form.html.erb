<% if @article.errors.any? %>
<div class="alert alert-danger" role="alert"> 
  <h2>These are an errors which appeared during creation an article</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
</div>  
<% end %> <br/>

<div class = "row">
  <div class = "col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class = "form-group">
        <div class = "col-sm-2 control-label">
          <%= f.label :title %>
        </div>
        <div class = "col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Type a title to your article", autofocus: true %>
        </div>
      </div>
      <div class = "form-group">
        <div class = "col-sm-2 control-label">
          <%= f.label :description %>
        </div>
        <div class = "col-sm-8"> 
          <%= f.text_area :description, rows: 8, class: "form-control", placeholder: "Type a description to your title", autofocus: true %>
        </div>
      </div>
      <div class = "form-group">
        <div class = "col-sm-offset-2 col-sm-2">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to 'Cancel request and back to articles list', articles_path %> ]
    </div>
  </div>
</div>
