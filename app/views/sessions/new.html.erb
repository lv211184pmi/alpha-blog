<h1 align="center">LogIn</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
  <div class = "form-group">
    <div class = "col-sm-2 control-label">
      <%= f.label :email %>
    </div>
    <div class = "col-sm-8"> 
      <%= f.email_field :email, class: "form-control", placeholder: "E-Mail Adress", autofocus: true %>
    </div>
  </div>
  <div class = "form-group">
    <div class = "col-sm-2 control-label">
      <%= f.label :password %>
    </div>
    <div class = "col-sm-8"> 
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
  </div>
  <div class = "form-group">
    <div class = "col-sm-offset-2 col-sm-2">
      <%= f.submit 'Log In', class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
<div class="col-xs-4 col-xs-offset-4">
  [ <%= link_to 'Cancel request and back to articles list', articles_path %> ]
</div>